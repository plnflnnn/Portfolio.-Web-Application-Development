<%- include('partials/header') %>

<div class="container mt-5">
  <h1>Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="btn btn-dark">Login</button>
          </form>

          <% if(locals.message){ %>
            <p style="margin-top: 30px;color:brown;"><%= message %></p>
            <a style="text-decoration: underline; color: black;" href="/register"><%= link %></a>
          <% } %>

          <a style="margin-top: 20px; display: block; text-decoration: underline; color: black;" href="/changepassword">Change password.</a>
          <a style="margin-top: 20px; display: block; text-decoration: underline; color: black;" href="/reset">Forgot password?</a>
        </div>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign in with Google
          </a>
        </div>
      </div>
    </div>

  </div>
</div>

<%- include('partials/footer') %>
